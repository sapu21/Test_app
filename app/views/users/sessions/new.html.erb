<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin text-center', id: 'login-form'}) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">User Log in</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: true %>
  <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me, value: "remember-me" %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end -%>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
  </div>
  <%= render "users/shared/links" %>
<% end %>






