<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group col-md-4">
      <label for="inputEmail4">Email</label>
      <%= f.email_field :email, autofocus: true , autocomplete: "email" , class: "form-control", id: "inputEmail4" , placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputAddress">Address</label>
    <%= f.text_field :address_line , autocomplete: "address-line" , class: "form-control" , id: "inputAddress" , placeholder: "B-2/295" %>
  </div>
  <div class="form-group">
    <label for="inputAddress">Street</label>
    <%= f.text_field :street , autocomplete: "street" , class: "form-control" , id: "inputStreet" , placeholder: "Congress road" %>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <%= f.text_field :city , autocomplete: "city" , class: "form-control" , id: "inputCity" , placeholder: "Kalyani" %>
    </div>
    <div class="form-group col-md-4">
      <label for="inputCity">Landmark</label>
      <%= f.text_field :landmark , autocomplete: "landmark" , class: "form-control" , id: "inputState" , placeholder: "Landmark" %>
    </div>
    <div class="form-group col-md-4">
      <label for="inputCity">State</label>
      <%= f.text_field :state , autocomplete: "state" , class: "form-control" , id: "inputState" , placeholder: "Westbengal" %>
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">Zip</label>
      <%= f.number_field :pin_code , autocomplete: "zip" ,class: "form-control" , id: "inputZip" , placeholder: "Zip" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputImage">Upload Image</label>
    <%= f.file_field :image , class: "form-control" , id: "inputImage" %>
  </div>

  <div style="padding-top:15px" class="actions text-center"">
  <%= f.submit "Update", class: "btn btn-primary" %>
  <%= link_to "User logout", destroy_user_session_path, method: :delete, class: "btn btn-danger"  %>
  </div>
<% end %>


<p>
  <strong>Profile Image</strong>
  <% if resource.image.attached? %>
    <%= image_tag resource.image.variant(resize: '300x300!') %>
  <% end %>
</p>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>
